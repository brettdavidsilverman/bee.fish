##
##  Makefile -- Build procedure for sample database Apache module
##  Autogenerated via ``apxs -n database -g''.
##

builddir=.
top_srcdir=/usr/share/apache2
top_builddir=/usr/share/apache2
#include /usr/share/apache2/build/special.mk

#   the used tools
APACHECTL=apachectl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
INCLUDES=-I/usr/include/apache2 -I/usr/include/apr-1.0 -I../../bee.fish/code
#LIBS=-Lmy/lib/dir -lmylib

DATABASE=../../bee.fish/build/Database


mod_database.so:	mod_database.cpp ParseURI.hpp ApacheStream.hpp $(DATABASE) Test.hpp a.out
	g++ -std=c++17 -fPIC -shared -o mod_database.so $(INCLUDES) mod_database.cpp -lpthread -lrt
	
$(DATABASE):
	cd ../../bee.fish && make $(DEBUG)

a.out: main.cpp Test.hpp Makefile ParseURI.hpp
	g++ -std=c++17 -o a.out $(INCLUDES) main.cpp $(CFLAGS) -lpthread -lrt
	
#   the default target
all: mod_database.so a.out

#   install the shared object file into Apache 
install: mod_database.so
	sudo cp mod_database.so /usr/lib/apache2/modules/mod_database.so

#   cleanup
clean:
	-sudo rm -f mod_database.o mod_database.lo mod_database.slo mod_database.la mod_database.so a.out

#   simple test
test: a.out reload
	./a.out -test

run_debug:	debug a.out
	gdb --args ./a.out -test
	
debug:	clean
debug:	DEBUG = debug
debug:	CFLAGS += -g -DDEBUG
debug:	PORT = 8000
debug:	all


#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	sudo $(APACHECTL) start
	sleep 1
	curl http://localhost/ -s > /dev/null

restart:	stop start

stop:
	sudo $(APACHECTL) stop
	sleep 1

